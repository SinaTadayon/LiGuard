    "mermaid": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
